<article class="new-post">
  <h1>Make a Forum</h1> <!--Call this a Thread? Post?-->
  <form action="/posts" method="POST" class="new-post-form">
    <label>
      Forum Title
      <input type="text" name="title" placeholder="Forum Title" value="{{forum.title}}" class="full-width-input"/>
    </label>
    <label for="post-body">
      Forum Body
    </label>
    <textarea id="post-body" name="body" rows="4" placeholder="Post Content" class="full-width-input">{{forum.body}}</textarea>

    <label for="poster">
      Poster
    </label>
    <select class="full-width-input" name="posterId">
      <option value="">Select User...</option>
      {{#each users}}
        <option value="{{_id}}">{{firstName}} {{lastName}}</option>
      {{/each}}
    </select>
